generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model for authentication
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String
  password  String   // hashed password
  role      String   @default("user") // "admin" or "user"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  spkRecords       SPKRecord[]
  refreshTokens    RefreshToken[]
  createdTemplates SPKTemplate[] // Templates created by admin

  @@map("users")
}

// Refresh tokens for JWT authentication
model RefreshToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  expiresAt DateTime
  createdAt DateTime @default(now())

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("refresh_tokens")
}

// SPK Template model - templates created by admin
model SPKTemplate {
  id          String   @id @default(uuid())
  name        String
  description String?
  category    String?  // e.g., "Employee Selection", "Vendor Selection", etc.
  isActive    Boolean  @default(true)
  createdBy   String   // Admin who created this template
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  creator         User                    @relation(fields: [createdBy], references: [id], onDelete: Cascade)
  templateCriteria TemplateCriterion[]
  spkRecords      SPKRecord[]             // Records using this template

  @@map("spk_templates")
}

// Template Criterion - criteria defined in templates
model TemplateCriterion {
  id          String @id @default(uuid())
  templateId  String
  name        String
  weight      Float
  type        String // 'benefit' or 'cost'
  order       Int    // for ordering display

  // Relations
  template           SPKTemplate           @relation(fields: [templateId], references: [id], onDelete: Cascade)
  templateSubCriteria TemplateSubCriteria[]

  @@map("template_criteria")
}

// Template Sub-criteria - sub-criteria defined in templates
model TemplateSubCriteria {
  id                   String @id @default(uuid())
  templateCriterionId  String
  label                String
  value                Int    // 1-5 scale
  order                Int    // for ordering display

  // Relations
  templateCriterion TemplateCriterion @relation(fields: [templateCriterionId], references: [id], onDelete: Cascade)

  @@unique([templateCriterionId, value])
  @@map("template_sub_criteria")
}

// SPK Record model - main record for each SPK analysis (now uses templates)
model SPKRecord {
  id         String  @id @default(uuid())
  userId     String
  templateId String? // Reference to template used (optional for backward compatibility)
  title      String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Relations
  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  template     SPKTemplate?  @relation(fields: [templateId], references: [id], onDelete: SetNull)
  criteria     Criterion[]   // Actual criteria used (copied from template or custom)
  alternatives Alternative[]
  sawResults   SAWResult[]
  wpResults    WPResult[]

  @@map("spk_records")
}

// Criterion model - criteria for evaluation (now can be copied from template)
model Criterion {
  id                   String  @id @default(uuid())
  spkId                String
  templateCriterionId  String? // Reference to original template criterion
  name                 String
  weight               Float
  type                 String  // 'benefit' or 'cost'
  order                Int     // for ordering display

  // Relations
  spkRecord         SPKRecord          @relation(fields: [spkId], references: [id], onDelete: Cascade)
  alternativeValues AlternativeValue[]
  subCriteria       SubCriteria[]

  @@map("criteria")
}

// Sub-criteria for each criterion (copied from template or custom)
model SubCriteria {
  id          String @id @default(uuid())
  criterionId String
  label       String
  value       Int    // 1-5 scale
  order       Int    // for ordering display

  // Relations
  criterion Criterion @relation(fields: [criterionId], references: [id], onDelete: Cascade)

  @@unique([criterionId, value])
  @@map("sub_criteria")
}

// Alternative model - alternatives to be evaluated
model Alternative {
  id    String @id @default(uuid())
  spkId String
  name  String

  // Relations
  spkRecord         SPKRecord          @relation(fields: [spkId], references: [id], onDelete: Cascade)
  alternativeValues AlternativeValue[]
  sawResults        SAWResult[]
  wpResults         WPResult[]

  @@map("alternatives")
}

// Alternative values for each criterion
model AlternativeValue {
  id            String @id @default(uuid())
  alternativeId String
  criterionId   String
  value         Float

  // Relations
  alternative Alternative @relation(fields: [alternativeId], references: [id], onDelete: Cascade)
  criterion   Criterion   @relation(fields: [criterionId], references: [id], onDelete: Cascade)

  @@unique([alternativeId, criterionId])
  @@map("alternative_values")
}

// SAW (Simple Additive Weighting) Results
model SAWResult {
  id            String @id @default(uuid())
  spkId         String
  alternativeId String
  score         Float
  rank          Int

  // Relations
  spkRecord   SPKRecord   @relation(fields: [spkId], references: [id], onDelete: Cascade)
  alternative Alternative @relation(fields: [alternativeId], references: [id], onDelete: Cascade)

  @@unique([spkId, alternativeId])
  @@map("saw_results")
}

// WP (Weighted Product) Results
model WPResult {
  id            String @id @default(uuid())
  spkId         String
  alternativeId String
  score         Float
  rank          Int

  // Relations
  spkRecord   SPKRecord   @relation(fields: [spkId], references: [id], onDelete: Cascade)
  alternative Alternative @relation(fields: [alternativeId], references: [id], onDelete: Cascade)

  @@unique([spkId, alternativeId])
  @@map("wp_results")
}