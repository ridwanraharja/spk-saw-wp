generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model for authentication
model User {
  userId    String   @id @default(uuid()) @map("user_id")
  email     String   @unique @map("email")
  name      String   @map("name")
  password  String   @map("password") // hashed password
  role      String   @default("user") @map("role") // "admin" or "user"
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  spkRecords       SPKRecord[]
  refreshTokens    RefreshToken[]
  createdTemplates SPKTemplate[] // Templates created by admin

  @@map("users")
}

// Refresh tokens for JWT authentication
model RefreshToken {
  refreshTokenId String   @id @default(uuid()) @map("refresh_token_id")
  token          String   @unique @map("token")
  userId         String   @map("user_id")
  expiresAt      DateTime @map("expires_at")
  createdAt      DateTime @default(now()) @map("created_at")

  // Relations
  user User @relation(fields: [userId], references: [userId], onDelete: Cascade)

  @@map("refresh_tokens")
}

// SPK Template model - templates created by admin
model SPKTemplate {
  templateId  String   @id @default(uuid()) @map("template_id")
  name        String   @map("name")
  description String?  @map("description")
  category    String?  @map("category") // e.g., "Employee Selection", "Vendor Selection", etc.
  isActive    Boolean  @default(true) @map("is_active")
  userId      String   @map("user_id") // Admin who created this template
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  // Relations
  creator          User                  @relation(fields: [userId], references: [userId], onDelete: Cascade)
  templateCriteria TemplateCriterion[]
  spkRecords       SPKRecord[]           // Records using this template

  @@map("spk_templates")
}

// Template Criterion - criteria defined in templates
model TemplateCriterion {
  templateCriterionId String @id @default(uuid()) @map("template_criterion_id")
  templateId          String @map("template_id")
  name                String @map("name")
  weight              Float  @map("weight")
  type                String @map("type") // 'benefit' or 'cost'
  order               Int    @map("order") // for ordering display

  // Relations
  template            SPKTemplate           @relation(fields: [templateId], references: [templateId], onDelete: Cascade)
  templateSubCriteria TemplateSubCriteria[]

  @@map("template_criteria")
}

// Template Sub-criteria - sub-criteria defined in templates
model TemplateSubCriteria {
  templateSubCriteriaId String @id @default(uuid()) @map("template_sub_criteria_id")
  templateCriterionId   String @map("template_criterion_id")
  label                 String @map("label")
  value                 Int    @map("value") // 1-5 scale
  order                 Int    @map("order") // for ordering display

  // Relations
  templateCriterion TemplateCriterion @relation(fields: [templateCriterionId], references: [templateCriterionId], onDelete: Cascade)

  @@unique([templateCriterionId, value])
  @@map("template_sub_criteria")
}

// SPK Record model - main record for each SPK analysis (now uses templates)
model SPKRecord {
  spkId      String   @id @default(uuid()) @map("spk_id")
  userId     String   @map("user_id")
  templateId String?  @map("template_id") // Reference to template used (optional for backward compatibility)
  title      String   @map("title")
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  // Relations
  user         User          @relation(fields: [userId], references: [userId], onDelete: Cascade)
  template     SPKTemplate?  @relation(fields: [templateId], references: [templateId], onDelete: SetNull)
  criteria     Criterion[]   // Actual criteria used (copied from template or custom)
  alternatives Alternative[]
  sawResults   SAWResult[]
  wpResults    WPResult[]

  @@map("spk_records")
}

// Criterion model - criteria for evaluation (now can be copied from template)
model Criterion {
  criterionId          String  @id @default(uuid()) @map("criterion_id")
  spkId                String  @map("spk_id")
  templateCriterionId  String? @map("template_criterion_id") // Reference to original template criterion
  name                 String  @map("name")
  weight               Float   @map("weight")
  type                 String  @map("type") // 'benefit' or 'cost'
  order                Int     @map("order") // for ordering display

  // Relations
  spkRecord         SPKRecord          @relation(fields: [spkId], references: [spkId], onDelete: Cascade)
  alternativeValues AlternativeValue[]
  subCriteria       SubCriteria[]

  @@map("criteria")
}

// Sub-criteria for each criterion (copied from template or custom)
model SubCriteria {
  subCriteriaId String @id @default(uuid()) @map("sub_criteria_id")
  criterionId   String @map("criterion_id")
  label         String @map("label")
  value         Int    @map("value") // 1-5 scale
  order         Int    @map("order") // for ordering display

  // Relations
  criterion Criterion @relation(fields: [criterionId], references: [criterionId], onDelete: Cascade)

  @@unique([criterionId, value])
  @@map("sub_criteria")
}

// Alternative model - alternatives to be evaluated
model Alternative {
  alternativeId String @id @default(uuid()) @map("alternative_id")
  spkId         String @map("spk_id")
  name          String @map("name")

  // Relations
  spkRecord         SPKRecord          @relation(fields: [spkId], references: [spkId], onDelete: Cascade)
  alternativeValues AlternativeValue[]
  sawResults        SAWResult[]
  wpResults         WPResult[]

  @@map("alternatives")
}

// Alternative values for each criterion
model AlternativeValue {
  alternativeValueId String @id @default(uuid()) @map("alternative_value_id")
  alternativeId      String @map("alternative_id")
  criterionId        String @map("criterion_id")
  value              Float  @map("value")

  // Relations
  alternative Alternative @relation(fields: [alternativeId], references: [alternativeId], onDelete: Cascade)
  criterion   Criterion   @relation(fields: [criterionId], references: [criterionId], onDelete: Cascade)

  @@unique([alternativeId, criterionId])
  @@map("alternative_values")
}

// SAW (Simple Additive Weighting) Results
model SAWResult {
  sawResultId   String @id @default(uuid()) @map("saw_result_id")
  spkId         String @map("spk_id")
  alternativeId String @map("alternative_id")
  score         Float  @map("score")
  rank          Int    @map("rank")

  // Relations
  spkRecord   SPKRecord   @relation(fields: [spkId], references: [spkId], onDelete: Cascade)
  alternative Alternative @relation(fields: [alternativeId], references: [alternativeId], onDelete: Cascade)

  @@unique([spkId, alternativeId])
  @@map("saw_results")
}

// WP (Weighted Product) Results
model WPResult {
  wpResultId    String @id @default(uuid()) @map("wp_result_id")
  spkId         String @map("spk_id")
  alternativeId String @map("alternative_id")
  score         Float  @map("score")
  rank          Int    @map("rank")

  // Relations
  spkRecord   SPKRecord   @relation(fields: [spkId], references: [spkId], onDelete: Cascade)
  alternative Alternative @relation(fields: [alternativeId], references: [alternativeId], onDelete: Cascade)

  @@unique([spkId, alternativeId])
  @@map("wp_results")
}